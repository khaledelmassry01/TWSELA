# Server Configuration
SERVER_SSL_ENABLED=true
SERVER_SSL_KEY_STORE=classpath:keystore.p12
SERVER_SSL_KEY_STORE_PASSWORD=USE_SECURE_PASSWORD_HERE

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=USE_SECURE_PASSWORD_HERE

# JWT Configuration
JWT_SECRET=USE_SECURE_256BIT_KEY_HERE

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://your-production-domain.com

# Logging Configuration
LOG_FILE_PATH=/var/log/twsela/twsela.log

# SMS Configuration
SMS_PROVIDER=twilio
SMS_ENABLED=true

# Twilio Configuration
TWILIO_ACCOUNT_SID=YOUR_ACCOUNT_SID
TWILIO_AUTH_TOKEN=YOUR_AUTH_TOKEN
TWILIO_PHONE_NUMBER=YOUR_PHONE_NUMBER
TWILIO_WEBHOOK_URL=https://your-production-domain.com/api/webhooks/twilio

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_PATH=/var/backups/twsela
BACKUP_SCHEDULE=0 0 2 * * ?
BACKUP_RETENTION_DAYS=30